{
  "name": "nodejsapi",
  "version": "1.0.0",
  "description": "Primer proyecto",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/main.js --ext js"
  },
  "author": "Walter Fonseca",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "mongoose": "^6.8.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "eslint": "^8.29.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1"
  },
  "prettier": {
    "trailingComma": "none",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "arrowParens": "avoid",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "proseWrap": "preserve",
    "quoteProps": "preserve",
    "requirePragma": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 150
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "no-debugger": 1,
      "no-alert": 1,
      "space-before-function-paren": 0,
      "import/prefer-default-export": 0,
      "no-restricted-syntax": [
        2,
        "ForInStatement",
        "LabeledStatement",
        "WithStatement"
      ],
      "no-unused-vars": [
        1,
        {
          "ignoreSiblings": true,
          "argsIgnorePattern": "res|next|^err|item|_|__"
        }
      ],
      "import": 0,
      "no-shadow": [
        2,
        {
          "hoist": "functions",
          "allow": [
            "resolve",
            "reject",
            "done",
            "next",
            "err",
            "error",
            "state",
            "getters",
            "index",
            "*.resolvers.js"
          ]
        }
      ],
      "no-return-assign": [
        2,
        "except-parens"
      ],
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "no-param-reassign": [
        1,
        {
          "props": false
        }
      ],
      "arrow-body-style": [
        2,
        "as-needed"
      ],
      "array-callback-return": [
        0
      ],
      "no-unused-expressions": [
        2,
        {
          "allowTaggedTemplates": true
        }
      ],
      "comma-dangle": 0,
      "max-len": 0,
      "import/extensions": 0,
      "no-underscore-dangle": 0,
      "consistent-return": 0,
      "no-useless-escape": "off",
      "no-nested-ternary": 0,
      "radix": 0,
      "no-use-before-define": [
        0,
        {
          "functions": false
        }
      ],
      "prefer-const": [
        1,
        {
          "destructuring": "all"
        }
      ],
      "complexity": [
        1,
        22
      ]
    },
    "husky":{
      "hooks":{
        "pre-commit":"lint-staged"
      }
    },
    "lint-staged":{
      "*.js": "eslint --cache --fix"
    }
  }
}
